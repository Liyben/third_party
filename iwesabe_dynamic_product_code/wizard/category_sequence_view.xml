<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="form_category_sequence_view" model ="ir.ui.view">
			<field name="name">category.sequence.form</field>
			<field name="model">category.sequence</field>
			<field name="arch" type="xml">
			   <form string="Category Sequence">
					<div class="oe_title">
						<h2><field name="category_id" options="{'no_open':True}" readonly="1" force_save="1"/></h2>
					</div>
					<group>
						<group>
							<field name="prefix" required="1"/>
						</group>
						<group>
							<b>Please note that any changes made to the sequence padding will not affect the existing products within this category.</b>
							<field name="padding" required="1"/>
						</group>
					</group>
					<footer>
						<button string="Save" name="action_update_sequence" type="object" class="oe_highlight"/>
						<button string="Cancel" class="btn-default" special="cancel" />
				   </footer>
			   </form>
			</field>
		</record>

		<record id="action_category_sequence" model="ir.actions.act_window">
			<field name="name">Category Sequence</field>
			<field name="res_model">category.sequence</field>
			<field name="view_id" ref="form_category_sequence_view"/>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>