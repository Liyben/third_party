<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="seq_product_template_only_form_view" model="ir.ui.view">
			<field name="name">product.template.only_form_seq</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="invisible">1</attribute> 
                </field>
                <field name="default_code" position="after">
                    <label for="default_code"/>
                    <div class="o_row">
                        <field name="default_code"/>
                        <button name="action_update_seq" string="Update" type="object"/> 
                    </div>
                </field>
            </field>
        </record>
        <record id="seq_product_product_only_form_view" model="ir.ui.view">
			<field name="name">product.product.only_form_seq</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view"/>
			<field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="invisible">1</attribute> 
                </field>
                <field name="default_code" position="after">
                    <label for="default_code"/>
                    <div class="o_row">
                        <field name="default_code"/>
                        <button name="action_update_seq" string="Update" type="object"/> 
                    </div>
                </field>
            </field>
        </record>
    </data>
</odoo>